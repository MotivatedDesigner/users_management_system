extends ../layouts/dashboard
block content
  main
    h1 Users - Add
    form(method="post") 
      input(type="hidden", name="csrf")

      label(for="firstname") FirstName
      input#firstname(name="firstName", placeholder="FirstName")

      br
      label(for="lastname") LastName
      input#lastname(name="lastName", placeholder="LastName")

      br
      label(for="email") Email
      input#email(name="email", type="email", placeholder="Email")

      br
      label(for="password") Password
      input#password( name="password", placeholder="Password")

      br
      label(for="departement") Departement
      select#departement(name="departement")
        for departement in departements
          option(
            value=`${departement.id}`) #{departement.name}

      .form-actions 
        input(type="button", value="Cancel", onclick="history.back()")
        input(type="submit", value="Save")